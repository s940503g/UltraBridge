<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>UltraBridge</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }
    </style>
    <script>
        function editButtonOnClick () {
            document.getElementById("accTextField").readOnly = false;
            document.getElementById("pwdTextField").readOnly = false;
            document.getElementById("accTextField").value = "";
            document.getElementById("pwdTextField").value = "";

            document.getElementById("submitButton").hidden = false;
            document.getElementById("cancelButton").hidden = false;
            document.getElementById("editButton").hidden = true;
        }
        function formOnSubmit () {
            if (!confirm('Are you sure?')) {
                e.preventDefault();
                window.location.href = '../';
            }
        }
        function cancelButtonOnClick () {
            window.location.href = '../';
        }
    </script>
</head>

<body>
    <div class="container">
        <%- include('partials/navbar') %>
        <div>
            <h2>Zwave-Gateway: <%= mac %></h2>
            <!-- <form action="<%= mac %>/rebridge" method="post">
                <p>
                    <input type="button" name="rebidge" value="rebridge" />
                </p>
            </form> -->
            <form action="<%= mac %>/register" method="post" onsubmit="formOnSubmit()">
                <p>
                    Account: <input id="accTextField" type="text" name="acc"  value="<%= acc %>" readonly />
                </p>
                <p>
                    Password: <input id="pwdTextField" type="password" name="pwd" value="password" readonly />
                </p>
                <p>
                    <input id="editButton" type="button" value="edit" onclick="editOnclick()" />
                </p>
                <p>
                    <input id="submitButton" type="submit" value="Apply" hidden/>
                    <input id="cancelButton" type="button" value="cancel" onclick="cancelButtonOnClick()" hidden/>
                </p>
                <hr>
                <p>
                    <input type="submit" value="remove" formaction="<%= mac %>/remove"/>
                </p>
            </form>

            <hr>
        </div>
        <%- include('partials/footer') %>
    </div>
</body>

</html>
