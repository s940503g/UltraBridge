<!-- views/home.ejs -->
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>UltraBridge</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .jumbotron {
          margin-top: 10px;
        }
    </style>
    <script type="text/javascript">
        function rescanButtonOnClick () {
            location.reload();
        }
    </script>
</head>

<body>
    <div class="container">
        <%- include('partials/navbar') %>
        <div class="jumbotron">
            <h1>UltraBridge</h1>
            <p class="lead">Select gateway below and submit account and password to setup UltraBridge.</p>
            <p>
                <input type="button" value="rescan" onclick="rescanButtonOnClick()"/>
            </p>
        </div>

        <div class="row">
            <div class="col-lg-12">
              <% gateway_list.forEach((gateway) => { %>
                <a href="/gateway/<%= gateway.mac %>" class="list-group-item">
                  <h3 class="list-group-item-heading">Zwave-Gateway: <%= gateway.mac %></h4>
                  <p class="list-group-item-text
                  <% if (gateway.is_registered) { %>
                        text-success
                       <% } else { %>
                        text-danger
                       <% } %>">registered:<%= gateway.is_registered %></p>
                   <p class="list-group-item-text
                   <% if (gateway.paired) { %>
                         text-success
                        <% } else { %>
                         text-danger
                        <% } %>
                        ">paired:<%= gateway.paired %></p>
                    <p class="list-group-item-text
                    <% if (gateway.reachable) { %>
                          text-success
                         <% } else { %>
                          text-danger
                         <% } %>
                         ">reachable:<%= gateway.reachable %></p>
                     <p class="list-group-item-text text-dark">ip address:<%= gateway.ip %></p>
                </a>
              <% }) %>
            </div>
        </div>
        <%- include('partials/footer') %>
    </div>
</body>

</html>
